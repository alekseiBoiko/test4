mixin carouselSlide(slideNumber)
    - for (var x=0; x<slideNumber; x++)
        if x ==0
            .carousel-item.active
                .carousel-item-custom.d-flex.flex-column.align-items-center.text-center
                    +carouselContent
        else 
            .carousel-item
                .carousel-item-custom.d-flex.flex-column.align-items-center.text-center
                    +carouselContent

#carouselExampleControls.carousel.slide(data-bs-ride='carousel')
    .carousel-inner
        +carouselSlide('3')
    button.carousel-control-prev(type='button' data-bs-target='#carouselExampleControls' data-bs-slide='prev')
        .move-icon.d-flex.justify-content-center.align-items-center(aria-hidden='true') 
            img(src="images/arrow.png", alt="")
    button.carousel-control-next(type='button' data-bs-target='#carouselExampleControls' data-bs-slide='next')
        .move-icon.d-flex.justify-content-center.align-items-center(aria-hidden='true')
            img#right-icon(src="images/arrow.png", alt="")
